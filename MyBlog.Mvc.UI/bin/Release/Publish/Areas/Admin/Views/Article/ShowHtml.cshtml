@model MyBlog.EntityFramework.ViewModel.HTMLDisplayViewModel
@{
    ViewBag.Title = "ShowHtml";
    Layout = "~/Areas/Admin/Views/Shared/_AdminBaseLayout.cshtml";
}

<hr />

<div class="row">
    <div class="col-md-offset-1 col-md-8">
        <section>
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th style="text-align: center;">Sr.</th>
                        <th style="text-align: center;">HTML Content</th>
                    </tr>
                </thead>

                <tbody>
                    @for (int i = 0; i < Model.HTMLContentList.Count; i++)
                    {
                        <tr>
                            <td style="text-align: center;">@(i + 1)</td>

                            <td style="text-align: center;">
                                <div class="input-group">
                                    @Html.Raw(Model.HTMLContentList[i].html_content)
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>
    </div>
</div>


