
@model List<Article>

@foreach (Article article in Model)
{

    <div class="col-lg-12">
        <div class="blog-post">
            <div class="blog-thumb">
                <a href="/Articles/GetArticleById?id=@article.Id"><img src="~/Img/ArticlesImages/@article.ArticleImageName" alt=""></a>
            </div>
            <div class="down-content">
                <span>Lifestyle</span>
                <a href="/Articles/GetArticleById?id=@article.Id"><h4>@article.Title</h4></a>
                <ul class="post-info">
                    <li><a href="#">@article.ModifiedUsername</a></li>
                    <li><a href="#">@article.CreatedOn.ToString("dd.MM.yy HH:mm")</a></li>
                    <li><a href="#">12 Comments</a></li>
                </ul>
                <p>@article.Text <a href="/Articles/GetArticleById?id=@article.Id">Devamı...</a></p>
                <div class="post-options">
                    <div class="row">
                        <div class="col-6">
                            <ul class="post-tags">
                                <li><i class="fa fa-tags"></i></li>
                                <li><a href="#">@article.Category.Title </a>,</li>
                            </ul>
                        </div>

                        <div class="col-6">
                            <ul class="post-share">
                                <li><i class="fa fa-share-alt"></i></li>
                                <li><a href="#">Facebook</a>,</li>
                                <li><a href="#"> Twitter</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}



