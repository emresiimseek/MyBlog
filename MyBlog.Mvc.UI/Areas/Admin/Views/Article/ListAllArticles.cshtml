@model List<MyBlog.EntityFramework.Concrete.Article>
@{
    ViewBag.Title = "ListAllArticles";
    Layout = "~/Areas/Admin/Views/Shared/_AdminBaseLayout.cshtml";
}

<h2>ListAllArticles</h2>


@foreach (MyBlog.EntityFramework.Concrete.Article article in Model)
{
<ul>
    <li>

        <!-- Card Dark -->
        <div class="card">

            <!-- Card image -->
            <div class="view overlay">
                <img class="card-img-top" src="https://mdbootstrap.com/img/Photos/Horizontal/Work/4-col/img%20%2821%29.jpg"
                     alt="Card image cap">
                <a>
                    <div class="mask rgba-white-slight"></div>
                </a>
            </div>

            <!-- Card content -->
            <div class="card-body elegant-color white-text rounded-bottom">

                <!-- Social shares button -->
                <a class="activator waves-effect mr-4"><i class="fas fa-share-alt white-text"></i></a>
                <!-- Title -->
                <h4 class="card-title">@article.Title</h4>
                <hr class="hr-light">
                <!-- Text -->
                <p class="card-text white-text mb-4">
                   @article.Text
                    of the card's content.
                </p>
                <!-- Link -->
                @Html.ActionLink("Devamı...","","",new { id = article.Id }))
                <a href="#!" class="white-text d-flex justify-content-end">
                    <h5>Read more <i class="fas fa-angle-double-right"></i></h5>
                </a>

            </div>

        </div>
        <!-- Card Dark -->





    </li>
</ul>

}

