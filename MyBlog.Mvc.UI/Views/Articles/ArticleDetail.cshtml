@model Article
@{
    /**/

    ViewBag.Title = "ArticleDetail";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<br />
<section class="blog-posts grid-system">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="all-blog-posts">
                    <div class="row">
                        @Html.TextBoxFor(x => x.Id, new { @style = "display:none", id = "articleId" })
                        @if (true)
                        {
                            @Html.Raw(Model.Html_Content_Result.html_content)
                        }
                        <div class="col-lg-12">
                            <div class="sidebar-item comments">
                                <div class="sidebar-heading">
                                    <h2>@Model.CommentCount Yorum</h2>
                                </div>
                                <div class="content">

                                    <ul id="com">
                                        @if (Model.Comments != null)
                                        {
                                            foreach (Comment comments in Model.Comments)
                                            {
                                                <li>
                                                    <div class="author-thumb">
                                                        <img src="/uploads/Profile/@comments.User.Profilephoto" alt="">
                                                    </div>
                                                    <div class="right-content">
                                                        <h4>@comments.User.Username<span>@comments.ModifiedOn.ToString("dd.MM.yyyy")</span></h4>
                                                        <div class="col-sm-8">
                                                            <p> @comments.Text</p>
                                                        </div>

                                                    </div>
                                                </li>
                                            }
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <!--this area input comment-->
                        <div class="col-lg-12">
                            <div class="sidebar-item submit-comment">
                                <div class="sidebar-heading">
                                    <h2>Yorumun</h2>
                                </div>
                                <div class="content">
                                    <form id="comment" class="comment-add">
                                        <div class="row">
                                            <div class="col-md-12 col-sm-12">
                                                <fieldset>
                                                    <input name="subject" type="text" id="subject" placeholder="Konu">
                                                </fieldset>
                                            </div>
                                            <div class="col-lg-12">
                                                <fieldset>
                                                    <textarea name="message" rows="6" id="message" placeholder="Yorumunuz..." required=""></textarea>
                                                </fieldset>
                                            </div>
                                            <div class="col-lg-12">
                                                <div id="userd"></div>
                                                <fieldset>
                                                    <button type="button" id="form-submit" class="main-button">Gönder</button>
                                                </fieldset>

                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <!--Left panel-->

            <div class="col-lg-4">
                <div class="sidebar">
                    <div class="row">

                        @Html.Partial("_SearchPartial")


                        @Html.Action("GetLastArticle", "Articles")



                        @Html.Action("GetCategories", "Category")

                        <div class="col-lg-12">
                            <div class="sidebar-item tags">
                                <div class="sidebar-heading">
                                    <h2>Tag Clouds</h2>
                                </div>
                                <div class="content">
                                    <ul>
                                        <li><a href="#">Lifestyle</a></li>
                                        <li><a href="#">Creative</a></li>
                                        <li><a href="#">HTML5</a></li>
                                        <li><a href="#">Inspiration</a></li>
                                        <li><a href="#">Motivation</a></li>
                                        <li><a href="#">PSD</a></li>
                                        <li><a href="#">Responsive</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>


        </div>
    </div>
</section>

@section js
    {
    <script>
        $("#article").addClass("nav-item active");
        $("#about").removeClass("active");
        $("#home").removeClass("active");
        $("#contact").removeClass("active");
    </script>

}


