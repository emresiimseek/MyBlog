@model List<Article>
@using myBlog.EntityFramework.Concrete
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


@Html.Action("GetArticlesWithBanner", "Home")


<section class="blog-posts 
         ">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="all-blog-posts">
                    <div class="row" id="main">


                        @foreach (Article article in Model)
                        {

                            <div class="col-lg-12">
                                <div class="blog-post">
                                    <div class="blog-thumb">
                                        <a href="#"><img src="~/Img/ArticlesImages/@article.ArticleImageName" alt=""></a>
                                    </div>
                                    <div class="down-content">
                                        <span>Lifestyle</span>
                                        <a href="post-details.html"><h4>@article.Title</h4></a>
                                        <ul class="post-info">
                                            <li><a href="#">@article.ModifiedUsername</a></li>
                                            <li><a href="#">@article.CreatedOn.ToString("dd.MM.yy HH:mm")</a></li>
                                            @if (article.CommentCount!=null)
                                            {
                                            <li><a href="#"> @article.CommentCount Yorum</a></li>
                                               
                                            }

                                        </ul>
                                        <p>@article.Text <a id="linkforarticle" href="/Articles/ArticleDetail?id=@article.Id">Devamı...</a></p>
                                        <div class="post-options">
                                            <div class="row">
                                                <div class="col-6">
                                                    <ul class="post-tags">
                                                        <li><i class="fa fa-tags"></i></li>
                                                        <li><a href="#">@article.Category.Title </a></li>
                                                    </ul>
                                                </div>

                                                <div class="col-6">
                                                    <ul class="post-share">
                                                        <li><i class="fa fa-share-alt"></i></li>
                                                        <li><a href="#">Facebook</a></li>
                                                        <li><a href="#"> Twitter</a></li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        }
                        <div class="col-lg-12">
                            <div class="main-button">
                                <a class="nav-link" href="/Articles/ArticlesPage">Tüm Yazıları Görüntüle</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="sidebar">
                    <div class="row">

                        @Html.Partial("_SearchPartial")


                        @Html.Action("GetLastArticle", "Articles")



                        @Html.Action("GetCategories", "Category")

                        <div class="col-lg-12">
                            <div class="sidebar-item tags">
                                <div class="sidebar-heading">
                                    <h2>Tag Clouds</h2>
                                </div>
                                <div class="content">
                                    <ul>
                                        <li><a href="#">Lifestyle</a></li>
                                        <li><a href="#">Creative</a></li>
                                        <li><a href="#">HTML5</a></li>
                                        <li><a href="#">Inspiration</a></li>
                                        <li><a href="#">Motivation</a></li>
                                        <li><a href="#">PSD</a></li>
                                        <li><a href="#">Responsive</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>
</section>


@section js
    {
    <script>
        $("#home").addClass("nav-item active");
        $("#article").removeClass("active");
        $("#contact").removeClass("active");
        $("#about").removeClass("active");
    </script>

}