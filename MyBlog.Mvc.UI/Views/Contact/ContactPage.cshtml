@model MyBlog.Mvc.UI.Models.MailOfView
@{
    /**/

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<section class="contact-us">
    <div class="container">
        <div class="row">

            <div class="col-lg-12">
                <div class="down-contact">
                    <div class="row">
                        <div class="col-lg-8">
                            <div class="sidebar-item contact-form">
                                <div class="sidebar-heading">
                                    <h2>Send us a message</h2>
                                </div>
                                <div class="content">
                                    @using (Html.BeginForm())
                                    {

                                        <div class="row">
                                            <div class="col-md-6 col-sm-12">
                                                <fieldset>
                                                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Adınız" })
                                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                                </fieldset>
                                            </div>
                                            <div class="col-md-6 col-sm-12">
                                                <fieldset>
                                                    @Html.TextBoxFor(m => m.toMail, new { @class = "form-control", placeholder = "E-posta adresiniz" })
                                                    @Html.ValidationMessageFor(model => model.toMail, "", new { @class = "text-danger" })
                                                </fieldset>
                                            </div>
                                            <div class="col-md-12 col-sm-12">
                                                <fieldset>
                                                    @Html.TextBoxFor(m => m.subject, new { @class = "form-control", placeholder = "Başlık" })
                                                    @Html.ValidationMessageFor(model => model.subject, "", new { @class = "text-danger" })
                                                </fieldset>
                                            </div>
                                            <div class="col-lg-12">
                                                @Html.TextAreaFor(m => m.body, new { @class = "form-control", placeholder = "Mailinizi buraya yazınız...", rows = "3" })
                                                @Html.ValidationMessageFor(model => model.body, "", new { @class = "text-danger" })
                                            </div>
                                            @if (ViewBag.res!=null)
	                                            {
                                            <p>@ViewBag.res</p> 
	                                            }
                                            <div class="col-lg-12">
                                                <fieldset>
                                                    <button type="submit" id="Send" class="main-button">Gönder</button>
                                                </fieldset>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-4">
                            <div class="sidebar-item contact-information">
                                <div class="sidebar-heading">
                                    <h2>contact information</h2>
                                </div>
                                <div class="content">
                                    <ul>
                                        <li>
                                            <h5>090-484-8080</h5>
                                            <span>PHONE NUMBER</span>
                                        </li>
                                        <li>
                                            <h5>info@company.com</h5>
                                            <span>EMAIL ADDRESS</span>
                                        </li>
                                        <li>
                                            <h5>
                                                123 Aenean id posuere dui,
                                                <br>Praesent laoreet 10660
                                            </h5>
                                            <span>STREET ADDRESS</span>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
@section js
    {
    <script>
        $("#contact").addClass("nav-item active");
        $("#article").removeClass("active");
        $("#home").removeClass("active");
        $("#about").removeClass("active");
        //$("#footer").addClass("footer");
    </script>

}

